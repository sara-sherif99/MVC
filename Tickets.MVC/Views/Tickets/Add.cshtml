@model Tickets.BL.ViewModels.AddTicketsVM
@using Tickets.DAL.Models

<form asp-action="Add" method="post" enctype="multipart/form-data" class="mt-5 w-50 ms-auto me-auto">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group m-4">
        <input type="hidden" class="form-control" asp-for="Id" />
    </div>
    <div class="form-group m-4">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group m-4">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group m-4">
        <label asp-for="Severity"></label>
        <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severity>()"></select>
    </div>
    <div class="form-group m-4">
        <label asp-for="DeptId"></label>
        <select class="form-control" asp-for="DeptId" asp-items="ViewBag.Departments"></select>
    </div>
    <div class="form-group m-4">
        <label asp-for="Developers"></label>
        <select class="form-control" asp-for="Developers" asp-items="ViewBag.Developers"></select>
    </div>
    <div class="form-group m-4">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button class="btn btn-success mt-2 ms-4"> Submit </button>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }