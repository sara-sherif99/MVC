@model TicketVM


<form asp-action="Add" method="post" class="mt-5 w-50 ms-auto me-auto">
    <div class="form-group m-4">
        <label asp-for="CreatedDate"></label>
        <input class="form-control" asp-for="CreatedDate"/>
    </div>
    <div class="form-check m-4">
        <input class="form-check-input" asp-for="IsClosed" />
        <label asp-for="IsClosed"></label>
    </div>
    <div class="form-group m-4">
        <label asp-for="Severity"></label>
        <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severities>()"></select>
    </div>
    <div class="form-group m-4">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <button class="btn btn-success mt-2 ms-4"> Submit </button>
</form>