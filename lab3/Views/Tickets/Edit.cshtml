@model EditTicketVM

@{
    var departments = ViewBag.departments as IEnumerable<SelectListItem> ?? new List<SelectListItem>();
    var developers = ViewBag.developers as IEnumerable<SelectListItem> ?? new List<SelectListItem>();
}
<form asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="Id"></label>
        <input type="hidden" class="form-control" asp-for="Id" />
    </div>

    <div class="form-group m-4">
        <label asp-for="CreatedDate"></label>
        <input class="form-control" asp-for="CreatedDate" />
    </div>
    <div class="form-check m-4">
        <input class="form-check-input" asp-for="IsClosed" />
        <label asp-for="IsClosed"></label>
    </div>
    <div class="form-group m-4">
        <label asp-for="Severity"></label>
        <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severity>()"></select>
    </div>
    <div class="form-group m-4">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group m-4">
        <label asp-for="Department"></label>
        <select asp-for="Department" asp-items="departments"></select>
    </div>
    <div class="form-group m-4">
        <label asp-for="DeveloperIds"></label>
        <select asp-for="DeveloperIds" asp-items="developers"></select>
    </div>
    <button class="btn btn-success mt-2 ms-4"> Submit </button>
    <button class="btn btn-outline-info mt-2 ms-4"> <a asp-action="GetAll">Back to List</a> </button>
    

</form>
